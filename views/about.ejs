<%- include('./headere.ejs')%>
<div class="container mx-auto p-4">
    <h1 class="text-4xl font-bold text-blue-700 underline text-center"><%=pageTitle%></h1>


    <div class="container mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            
            <!-- Product Card -->
             <% movieLists.forEach(product => { %>
            <div class="bg-white shadow-lg rounded-2xl p-4">
                <img src="<%=product.poster%>" alt="Product Image" class="w-20 h-40 object-cover rounded-lg">
                <div class="mt-4">
                    <h2 class="text-lg font-semibold"><%=product.title%></h2>
                    <p class="text-gray-500 text-sm"><%=product.directors%></p>
                    <div class="flex justify-between items-center mt-2">
                        <span class="text-lg font-bold text-green-600">$<%=product.votes%></span>
                        <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                            Watch
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>

        </div>
    </div>
</div>
<%- include('./footer.ejs')%>