<%- include('./headere.ejs')%>
<div class="container mx-auto p-4">
  <h1 class="text-4xl font-bold text-blue-700 underline text-center">Welcome to My Shop</h1>
  <p class="text-lg text-gray-600 text-center mt-4">Discover the best online shopping experience with MyWebsite. Shop for the latest fashion, electronics, and more.</p>

<div class="bg-gray-100 ">

    <div class="container mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            
            <!-- Product Card -->
             <% homeLists.forEach(product => { %>
            <div class="bg-white shadow-lg rounded-2xl p-4">
                <img src="<%=product.imgUrl%>" alt="Product Image" class="w-full h-40 object-cover rounded-lg">
                <div class="mt-4">
                    <h2 class="text-lg font-semibold"><%=product.title%></h2>
                    <p class="text-gray-500 text-sm"><%=product.category%></p>
                    <div class="flex justify-between items-center mt-2">
                        <span class="text-lg font-bold text-green-600">$<%=product.price%></span>
                        <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>

        </div>
    </div>

  </div>

</div>
<%- include('./footer.ejs')%>